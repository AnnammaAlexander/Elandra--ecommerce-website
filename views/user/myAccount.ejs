        url:'/reset-password',
        type:'post',
        data:$('#resetPassword').serialize()+'&userid='+userid,
        success:function(response){
            console.log("response",response);

            if(response){
            swal('Password reset successfully').then(()=>{
                location.href="/logout"
            })

              
    

            }else{
                swal(' invalid password').then(()=>{
                    location.reload()
                })
                
            }
            
        }

        

    })
   }

