        <h1>Success</h1>
        <p>We received your purchase request;<br /> we'll be in touch shortly!</p>
    </div>
    <div class="col-md-12 text-center mt-3">
        <a href="/view-order-products/<%=orderid%>" class="btn btn-primary mt-5">View Orders</a>
        
        <button  class="btn btn-primary mt-5" onclick="cancelOrder('<%=orderid%>')">Cancel Order</button>
        <a href="/shop" class="btn btn-primary mt-5">Continue Shopping</a>
        
    </div>
   

   
</body>
<script>
      function cancelOrder(id) {
  swal({
    title: "Are you sure,You want to cancel the order?",
    text: "Once returned, you will not be able to recover the product!",
    icon: "warning",
    buttons: true,
    dangerMode: true,
  }).then((willCancel) => {
    if (willCancel) {
      $.ajax({
        url:'/cancel-product', 
        type:'PUT',
        data: {
          orderid: id
        },
        success: function (response) {
          if (response) {
            location.reload();
          }
        }
      });
      swal("Your product is canceled!", {
        icon: "success",
      });
    } else {
      swal("Canceled");
    }
  });
}
</script>

