<script>
 function searchKey(){
  let key=document.getElementById('searchBox').value
  if(key!=="" || key!==""){
  $.ajax({
      url: '/search', 
      type: 'post',
      data: {
        key:key
      },
      success: function (response) {
        console.log("response",response);
        if (response) {
          let searchItems=''
          for(let i=0;i<response.length;i++){
            console.log("response[i]._id",response[i]._id);
            searchItems+=`<a href='/product-detail/${response[i]._id}'>${response[i].Productname}</a><br>`
          }
          document.getElementById('searchKeyItems').innerHTML=searchItems
        }
      }
    });
  }else{
    document.getElementById('searchKeyItems').innerHTML=""
  }
 }
</script>