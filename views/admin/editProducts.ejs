<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Edit Product</h2>
          <form action="/admin/edit-product/<%=editproduct._id %>" method="POST" enctype="multipart/form-data">
            <label for="">Prodcut Name</label>
            <input type="text" name="name" class="form-control" value="<%=editproduct.Productname%>" />
            <label for="">Description</label>
            <input type="text" name="description" class="form-control" value="<%=editproduct.ProductDescription%>" />
  
            <label for="">Price</label>
            <input type="text" name="price" class="form-control" value="<%=editproduct.Price%>" />
  
            
            <label for="cars">Category</label>
           
            <select class="form-select" name="category" id="cars">
              <% procategory.forEach(function(procategory) { %>
              <option ><%=procategory.CategoryName %></option>
              <% } )%>
            </select>
          
            <label for="">Quantity</label>
            <input type="text" name="quantity" class="form-control" value="<%=editproduct.Quantity%>" />
  
            <label for="">Image</label>
            <img src="/uploads/<%=editproduct.Image[0]%>" alt="" style="width:100px;height:auto" id="imageEdit1" class="mt-3 mb-3">
            <input type="file" name="image1" class="form-control" onchange="changeImage1(event)" />

            <img src="/uploads/<%=editproduct.Image[1]%>" alt="" style="width:100px;height:auto" id="imageEdit2" class="mt-3 mb-3">
            <input type="file" name="image2" class="form-control" onchange="changeImage2(event)" />

            <img src="/uploads/<%=editproduct.Image[2]%>" alt="" style="width:100px;height:auto" id="imageEdit3" class="mt-3 mb-3">
            <input type="file" name="image3" class="form-control" onchange="changeImage3(event)" />

            <img src="/uploads/<%=editproduct.Image[3]%>" alt="" style="width:100px;height:auto" id="imageEdit4" class="mt-3 mb-3">
            <input type="file" name="image4" class="form-control" onchange="changeImage4(event)" />


            <input type="hidden" name="image1" value="<%=editproduct.Image[0]%>">

            <input type="hidden" name="image2" value="<%=editproduct.Image[1]%>">

            <input type="hidden" name="image3" value="<%=editproduct.Image[2]%>">

            <input type="hidden" name="image4" value="<%=editproduct.Image[3]%>">


            <button type="submit" class="btn btn-success mt-4">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <script>
     function changeImage1(events)
    {
      document.getElementById('imageEdit1').src = URL.createObjectURL(events.target.files[0])
    }

    function changeImage2(events)
    {
      document.getElementById('imageEdit2').src = URL.createObjectURL(events.target.files[1])
    }

   function  changeImage3(events)
    {
      document.getElementById('imageEdit3').src = URL.createObjectURL(events.target.files[2])
    }

    function changeImage4(events)
    {
      document.getElementById('imageEdit4').src = URL.createObjectURL(events.target.files[4])
    }
  </script>