<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Add Product</h2>
          
          <form
            action="/admin/add_product"
            method="post"
            enctype="multipart/form-data"
          >
            <label for="">Prodcut Name</label>
            <input type="text" name="name" class="form-control" />
            <label for="">Description</label>
            <input type="text" name="description" class="form-control" />
  
            <label for="">Price</label>
            <input type="text" name="price" class="form-control" />
            <label for="">Quantity</label>
            <input type="text" name="quantity" class="form-control" />
  
            <label for="">Category</label>
            <select class="form-select" name="category" id="cars">

             <% procategory.forEach(function(procategory) { %>
              <option ><%=procategory.CategoryName %></option>
              <% } )%>
            </select>
            <label for="">Brand</label>
            <select class="form-select" name="brand" id="cars">
              <option value="volvo">Volvo</option>
            </select><label for="">Image</label>
            <input type="file" name="Image" class="form-control"  id="imgView1" onchange="changeImage1(event)"/><label for="">Image</label>
            <img src="" alt="" style="width:100px;height:auto" id="imageEdit1" class="mt-3 mb-3">

  
            
            <input type="file" name="Image" class="form-control"  id="imgView1" onchange="changeImage2(event)"/><label for="">Image</label>
            <img src="" alt="" style="width:100px;height:auto" id="imageEdit1" class="mt-3 mb-3">

            <input type="file" name="Image" class="form-control"  id="imgView1" onchange="changeImage3(event)"/><label for="">Image</label>
            <img src="" alt="" style="width:100px;height:auto" id="imageEdit1" class="mt-3 mb-3">

            <input type="file" name="Image" class="form-control"  id="imgView1" onchange="changeImage4(event)"/><label for="">Image</label>
            <img src="" alt="" style="width:100px;height:auto" id="imageEdit1" class="mt-3 mb-3">


            <button type="submit" class="btn btn-success mt-4">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>
  <script>
   
   function viewImage1(event) {
    document.getElementById('imgView1').src =event.target =URL.createObjectURL(event.target.Image[0])
   }

   function viewImage2(event) {
    document.getElementById('imgView2').src =event.target =URL.createObjectURL(event.target.Image[1])
   }

   function viewImage3(event) {
    document.getElementById('imgView3').src =event.target =URL.createObjectURL(event.target.Image[2])
   }

   function viewImage4(event) {
    document.getElementById('imgView4').src =event.target =URL.createObjectURL(event.target.Image[4])
   }
  </script>
  